{
  "name": "material-icon-theme",
  "displayName": "Material Icon Theme",
  "description": "Material Design Icons for Visual Studio Code",
  "version": "1.3.4",
  "publisher": "PKief",
  "engines": {
    "vscode": "^1.5.0"
  },
  "homepage": "https://github.com/PKief/vscode-extension-material-icon-theme/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/PKief/vscode-extension-material-icon-theme.git"
  },
  "bugs": {
    "url": "https://github.com/PKief/vscode-extension-material-icon-theme/issues"
  },
  "icon": "logo.svg",
  "galleryBanner": {
    "color": "#2d2d2d",
    "theme": "dark"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "icons",
    "theme",
    "material",
    "icon-theme",
    "customization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "iconThemes": [
      {
        "id": "material-icon-theme",
        "label": "Material Icon Theme",
        "path": "./out/src/material-icons.json"
      }
    ],
    "commands": [
      {
        "command": "extension.activateIcons",
        "title": "Material Icons: Activate Icon Theme"
      },
      {
        "command": "extension.toggleAngularIcons",
        "title": "Material Icons: Toggle Angular Icons"
      },
      {
        "command": "extension.toggleFolderIcons",
        "title": "Material Icons: Toggle Folder Icons"
      },
      {
        "command": "extension.restoreDefaultConfig",
        "title": "Material Icons: Restore Default Configuration"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Show welcome message",
      "properties": {
        "material-icon-theme.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show the welcome message after first installation."
        },
        "material-icon-theme.showUpdateMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show the update message after each update."
        },
        "material-icon-theme.angular.iconsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the icons for Angular files."
        },
        "material-icon-theme.folders.iconsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable folder icons."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./ && npm run copy:json",
    "compile": "tsc -watch -p ./ && npm run copy:json",
    "copy:json": "cpx \"src/**/*.json\" out/src/",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "tslint": "tslint -c tslint.json ./src/**/*.ts",
    "pretest": "npm run vscode:prepublish",
    "test": "node ./node_modules/vscode/bin/test",
    "test:watch": "npm test -- --watch",
    "test:vscode": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "opn": "^4.0.2",
    "semver-compare": "^1.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "cpx": "^1.5.0",
    "mocha": "^3.2.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "vscode": "^1.0.5"
  }
}